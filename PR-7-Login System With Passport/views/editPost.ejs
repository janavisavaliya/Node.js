    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #fff;
            margin: 0;
            padding: 0;
            display: flex;
            min-height: 100vh;
            flex-direction: column;
        }

        .navbar {
            background-color: #fff;
            padding: 15px 30px;
        }

        .navbar .navbar-brand {
            font-size: 24px;
            color: #333;
        }

        .card {
            border: none;
            border-radius: 10px;
        }

        .card-body {
            padding: 15px;
        }

        .card-img-top {
            height: 250px;
            object-fit: cover;
            border-radius: 10px;
            transition: transform 0.3s ease;
        }

        .card-img-top:hover {
            transform: scale(1.05);
        }

        button {
            font-size: 14px;
            padding: 8px 12px;
        }

        h5.card-title {
            font-size: 20px;
            font-weight: 600;
        }

        ul.list-unstyled li {
            padding: 10px 0;
            border-bottom: 1px solid #ddd;
        }

        ul.list-unstyled li:last-child {
            border-bottom: none;
        }

        ul.list-unstyled li img {
            width: 40px;
            height: 40px;
            object-fit: cover;
        }

        ul.list-unstyled li button {
            font-size: 13px;
            padding: 6px 10px;
            border-radius: 20px;
        }

        ul.list-unstyled li button:hover {
            background-color: #007bff;
            color: #fff;
        }

        .form-container {
            border: 1px solid rgba(128, 128, 128, 0.251);
        }

        .card-body .d-flex button {
            font-size: 12px;
            padding: 6px 10px;
            border-radius: 20px;
            transition: background-color 0.3s ease;
        }

        .card-body .d-flex button:hover {
            background-color: #f0f0f0;
        }

        .card-body .card-text {
            font-size: 14px;
            color: #777;
        }

        .card-body .card-text a {
            color: #007bff;
            text-decoration: none;
        }

        .card-body .card-text a:hover {
            text-decoration: underline;
        }

        /* Sidebar Fixed Position */
        .sidebar {
            position: fixed;
            top: 0px;
            left: 0;
            width: 300px;
            height: calc(100vh);
            padding: 15px;
            background-color: #fff;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
            overflow-y: auto;
        }

        /* Main Feed Scrollable */
        .main-feed {
            margin-left: 300px;
            /* Space for the sidebar */
            padding: 0 20px;
            overflow-y: auto;
            /* height: calc(100vh - 80px); */
            /* Full height minus navbar */
        }

        .card-body .d-flex {
            justify-content: space-between;
        }

        ul,
        ol {
            list-style: none;
        }

        a {
            text-decoration: none;
            color: black;
        }
    </style>
</head>

