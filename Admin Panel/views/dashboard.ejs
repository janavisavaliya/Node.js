<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel Sidebar</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" defer></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        body {
            display: flex;
        }

        .sidebar {
            width: 250px;
            height: 100vh;
            background: #343a40;
            color: white;
            padding: 15px;
            position: fixed;
        }

        .sidebar a {
            color: white;
            text-decoration: none;
            padding: 10px;
            display: block;
            border-radius: 5px;
            transition: 0.3s;
        }

        .sidebar a:hover {
            background: #495057;
        }

        .content {
            margin-left: 260px;
            padding: 20px;
            width: 100%;
        }

        .btn-toggle::after {
            content: "\f107";
            font-family: "Font Awesome 6 Free";
            font-weight: 900;
            float: right;
            transition: transform 0.3s;
        }

        .btn-toggle[aria-expanded="true"]::after {
            transform: rotate(180deg);
        }

        .content {
            margin-left: 260px;
            padding: 20px;
            width: 100%;
        }

        .dashboard-card {
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .btn-toggle::after {
            content: "\f107";
            font-family: "Font Awesome 6 Free";
            font-weight: 900;
            float: right;
            transition: transform 0.3s;
        }

        .btn-toggle[aria-expanded="true"]::after {
            transform: rotate(180deg);
        }

        .header {
            background: linear-gradient(45deg, #4b6cb7, #182848);
            color: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s;
        }

        .card:hover {
            transform: translateY(-5px);
        }

        .card-body {
            text-align: center;
        }

        .card img {
            width: 50px;
            height: 50px;
            margin-bottom: 10px;
        }

        .table th {
            background-color: #4b6cb7;
            color: white;
        }
    </style>
</head>

<body>
    <div class="sidebar">
        <h4>Admin Panel</h4>
        <a href="#"><i class="fas fa-tachometer-alt"></i> Dashboard</a>

        <button class="btn btn-toggle d-block w-100 text-start text-white" data-bs-toggle="collapse"
            data-bs-target="#manageCollapse" aria-expanded="false">
            <i class="fas fa-cogs"></i> Category
        </button>
        <div class="collapse" id="manageCollapse">
            <a href="/category/addcategorypage" class="ms-3"><i class="fas fa-users"></i> Add Category</a>
            <a href="/category" class="ms-3"><i class="fas fa-sliders-h"></i> View Category</a>
        </div>

        <button class="btn btn-toggle d-block w-100 text-start text-white" data-bs-toggle="collapse"
            data-bs-target="#reportsCollapse" aria-expanded="false">
            <i class="fas fa-chart-line"></i> SubCategory
        </button>
        <div class="collapse" id="reportsCollapse">
            <a href="/subcategory/addsubCategorypage" class="ms-3"><i class="fas fa-file-alt"></i> Add SubCategory</a>
            <a href="/subcategory" class="ms-3"><i class="fas fa-chart-pie"></i> View SubCategory</a>
        </div>

        <button class="btn btn-toggle d-block w-100 text-start text-white" data-bs-toggle="collapse"
            data-bs-target="#supportCollapse" aria-expanded="false">
            <i class="fas fa-headset"></i> ExSubCategory
        </button>
        <div class="collapse" id="supportCollapse">
            <a href="#" class="ms-3"><i class="fas fa-envelope"></i> Add ExSubCategory</a>
            <a href="#" class="ms-3"><i class="fas fa-info-circle"></i> View ExSubCategory</a>
        </div>

        <a href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
    </div>
    <main role="main" class="container mt-4" style="margin-left: 260px;">
        <div class="header d-flex justify-content-between align-items-center">
            <h1 class="h2">Dashboard</h1>
            <button type="button" class="btn btn-light">Search</button>
        </div>
        <div class="row mt-4">
            <div class="col-md-3">
                <div class="card p-3 text-center">
                    <img src="https://img.icons8.com/fluency/48/000000/graph.png" alt="stats">
                    <h3>442,236 <span class="text-danger">-29.3%</span></h3>
                    <p>This month vs last month</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card p-3 text-center">
                    <img src="https://img.icons8.com/fluency/48/000000/money-bag.png" alt="income">
                    <h3>78,250 <span class="text-success">+1.14%</span></h3>
                    <p>You made an additional $1,000 this month</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card p-3 text-center">
                    <img src="https://img.icons8.com/fluency/48/000000/sales-performance.png" alt="sales">
                    <h3>18,800 <span class="text-success">+1.14%</span></h3>
                    <p>You made an additional $1,000 this month</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card p-3 text-center">
                    <img src="https://img.icons8.com/fluency/48/000000/financial-growth.png" alt="growth">
                    <h3>$35,078 <span class="text-danger">-2.14%</span></h3>
                    <p>This month vs last month</p>
                </div>
            </div>
        </div>
        <div class="row mt-4">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <h2>Unique Visitor</h2>
                        <canvas id="uniqueVisitorsChart"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h2>Income Overview</h2>
                        <h3>$7,650</h3>
                        <canvas id="incomeOverviewChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-4">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <h2>Recent Orders</h2>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>TRACKING NO</th>
                                    <th>PRODUCT NAME</th>
                                    <th>TOTAL ORDER</th>
                                    <th>STATUS</th>
                                    <th>TOTAL AMOUNT</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>184564564</td>
                                    <td>Camera Lens</td>
                                    <td>40</td>
                                    <td>Rejected</td>
                                    <td>$40,570</td>
                                </tr>
                                <tr>
                                    <td>64564564</td>
                                    <td>Laptop</td>
                                    <td>300</td>
                                    <td>Pending</td>
                                    <td>$180,130</td>
                                </tr>
                                <tr>
                                    <td>54564564</td>
                                    <td>Mobile</td>
                                    <td>388</td>
                                    <td>Approved</td>
                                    <td>$100,120</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h2>Analytics Report</h2>
                        <p>Company Finance Growth <span class="text-success">+45.14%</span></p>
                        <p>Company Expenses Ratio <span class="text-danger">0.58%</span></p>
                        <canvas id="analyticsReportChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const ctx1 = document.getElementById("salesChart").getContext("2d");
            new Chart(ctx1, {
                type: "line",
                data: {
                    labels: ["Jan", "Feb", "Mar", "Apr", "May", "Jun"],
                    datasets: [{
                        label: "Sales",
                        data: [10, 20, 15, 30, 25, 40],
                        borderColor: "#007bff",
                        fill: false
                    }]
                }
            });

            const ctx2 = document.getElementById("usersChart").getContext("2d");
            new Chart(ctx2, {
                type: "bar",
                data: {
                    labels: ["Jan", "Feb", "Mar", "Apr", "May", "Jun"],
                    datasets: [{
                        label: "New Users",
                        data: [5, 15, 10, 25, 20, 35],
                        backgroundColor: "#28a745"
                    }]
                }
            });
        });
    </script>
</body>

</html>