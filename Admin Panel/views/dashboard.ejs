    <style>
        body {
            display: flex;
        }

        .sidebar {
            width: 250px;
            height: 100vh;
            background: #fff;
            color: black;
            padding: 15px;
            position: fixed;
            border-right: 1px solid black;
        }

        .sidebar a {
            color: black;
            text-decoration: none;
            padding: 10px;
            display: block;
            border-radius: 5px;
            transition: 0.3s;
        }

        .sidebar a:hover {
            background: #e7f3ff;
        }

        .content {
            margin-left: 260px;
            padding: 20px;
            width: 100%;
        }

        .btn-toggle::after {
            content: "\f107";
            font-family: "Font Awesome 6 Free";
            font-weight: 900;
            float: right;
            transition: transform 0.3s;
        }

        .btn-toggle[aria-expanded="true"]::after {
            transform: rotate(180deg);
        }

        .content {
            margin-left: 260px;
            padding: 20px;
            width: 100%;
        }

        .dashboard-card {
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .btn-toggle::after {
            content: "\f107";
            font-family: "Font Awesome 6 Free";
            font-weight: 900;
            float: right;
            transition: transform 0.3s;
        }

        .btn-toggle[aria-expanded="true"]::after {
            transform: rotate(180deg);
        }

        .header {
            background: linear-gradient(45deg, #4b6cb7, #182848);
            color: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
        }

        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s;
        }

        .card:hover {
            transform: translateY(-5px);
        }

        .card-body {
            text-align: center;
        }

        .card img {
            width: 50px;
            height: 50px;
            margin-bottom: 10px;
        }

        .table th {
            background-color: #4b6cb7;
            color: white;
        }

        #chartContainer {
            height: 500px;
        }

        #incomeChartContainer {
            height: 457px;
        }

        #analyticsChartContainer {
            height: 300px;
        }
    </style>
</head>

