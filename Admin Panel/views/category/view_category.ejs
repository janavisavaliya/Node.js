<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Category..!</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" defer></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        body {
            display: flex;
        }

        .sidebar {
            width: 250px;
            height: 100vh;
            background: #fff;
            color: black;
            padding: 15px;
            position: fixed;
            border-right: 1px solid black;
        }

        .sidebar a {
            color: black;
            text-decoration: none;
            padding: 10px;
            display: block;
            border-radius: 5px;
            transition: 0.3s;
        }

        .sidebar a:hover {
            background: #e7f3ff;
        }

        .content {
            margin-left: 260px;
            padding: 20px;
            width: 100%;
        }

        .btn-toggle::after {
            content: "\f107";
            font-family: "Font Awesome 6 Free";
            font-weight: 900;
            float: right;
            transition: transform 0.3s;
        }

        .btn-toggle[aria-expanded="true"]::after {
            transform: rotate(180deg);
        }

        .content {
            margin-left: 260px;
            padding: 20px;
            width: 100%;
        }

        .dashboard-card {
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .btn-toggle::after {
            content: "\f107";
            font-family: "Font Awesome 6 Free";
            font-weight: 900;
            float: right;
            transition: transform 0.3s;
        }

        .btn-toggle[aria-expanded="true"]::after {
            transform: rotate(180deg);
        }

        .header {
            background: linear-gradient(45deg, #4b6cb7, #182848);
            color: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
        }


        .form-container {
            background-color: #e7f3ff;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .form-title {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 20px;
            color: #343a40;
        }

        .form-control {
            border-radius: 8px;
        }

        .btn-custom {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            border-radius: 8px;
            transition: 0.3s;
        }

        .btn-custom:hover {
            opacity: 0.8;
        }
    </style>
</head>

<body>
    <div class="sidebar">
        <img src="https://themewagon.github.io/Mantis-Bootstrap/assets/images/logo-dark.svg" alt="">
        <a href="/dashboard" class="text-dark"><i class="fas fa-tachometer-alt"></i> Dashboard</a>

        <button class="btn btn-toggle d-block w-100 text-start text-dark" data-bs-toggle="collapse"
            data-bs-target="#manageCollapse" aria-expanded="false">
            <i class="fas fa-cogs"></i> Category
        </button>
        <div class="collapse" id="manageCollapse">
            <a href="/category/addcategorypage" class="ms-3"><i class="fas fa-users"></i> Add Category</a>
            <a href="/category" class="ms-3"><i class="fas fa-sliders-h"></i> View Category</a>
        </div>

        <button class="btn btn-toggle d-block w-100 text-start text-dark" data-bs-toggle="collapse"
            data-bs-target="#reportsCollapse" aria-expanded="false">
            <i class="fas fa-chart-line"></i> SubCategory
        </button>
        <div class="collapse" id="reportsCollapse">
            <a href="/subcategory/addsubCategorypage" class="ms-3"><i class="fas fa-file-alt"></i> Add SubCategory</a>
            <a href="/subcategory" class="ms-3"><i class="fas fa-chart-pie"></i> View SubCategory</a>
        </div>

        <button class="btn btn-toggle d-block w-100 text-start text-dark" data-bs-toggle="collapse"
            data-bs-target="#supportCollapse" aria-expanded="false">
            <i class="fas fa-headset"></i> ExSubCategory
        </button>
        <div class="collapse" id="supportCollapse">
            <a href="/exsubcategory/addexsubcategorypage" class="ms-3"><i class="fas fa-envelope"></i> Add
                ExSubCategory</a>
            <a href="/exsubcategory" class="ms-3"><i class="fas fa-info-circle"></i> View ExSubCategory</a>
        </div>
        <button class="btn btn-toggle d-block w-100 text-start text-dark" data-bs-toggle="collapse"
            data-bs-target="#productCollapse" aria-expanded="false">
            <i class="fas fa-headset"></i> Product
        </button>
        <div class="collapse" id="productCollapse">
            <a href="/product/addproduct" class="ms-3"><i class="fas fa-envelope"></i> Add
                Product</a>
            <a href="/product" class="ms-3"><i class="fas fa-info-circle"></i> View Product</a>
        </div>

        <a href="/logout" class="text-dark"><i class="fas fa-sign-out-alt"></i> Logout</a>
    </div>
    <main role="main" class="container mt-4" style="margin-left: 260px;">
        <div class="header d-flex justify-content-between align-items-center">
            <h1 class="h2"><img src="https://themewagon.github.io/Mantis-Bootstrap/assets/images/logo-dark.svg" alt="">
            </h1>
            <button type="button" class="btn btn-light">Search</button>
        </div>
        <div class="row" style="margin-top: 60px;">
            <h2 align="center">View Categories</h2>
            <div class="col-12">
                <% if(locals?.message?.success) { %>
                    <div class="alert alert-success w-50" role="alert">
                        <%= locals?.message?.success %>
                    </div>
                    <% } %>

                        <div class="card">

                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th scope="col">Srno</th>
                                        <th scope="col">Category</th>
                                        <th scope="col">Action</th>
                                        <th scope="col">Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% category.forEach((val, index)=> { %>
                                        <tr>
                                            <td>
                                                <%= ++index %>
                                            </td>
                                            <td>
                                                <%= val?.category %>
                                            </td>
                                            <td>
                                                <a href="/category/deletecategory?id=<%= val?.id %>"
                                                    class="btn btn-danger btn-sm"><i class="fa-solid fa-trash"></i></a>
                                                <a href="/category/editcategory?id=<%= val?.id %>"
                                                    class="btn btn-primary btn-sm"><i class="fa fa-edit"></i></a>
                                            </td>
                                            <td>
                                                <% if(val?.status=="active" ) { %>
                                                    <a href="/category/changestatus?id=<%= val?.id %>&status=deactive"
                                                        class="btn btn-success btn-sm">
                                                        <%= val?.status %>
                                                    </a>
                                                    <% } else { %>
                                                        <a href="/category/changestatus?id=<%= val?.id %>&status=active"
                                                            class="btn btn-warning btn-sm">
                                                            <%= val?.status %>
                                                        </a>
                                                        <% } %>
                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>
                            </table>
                        </div>

                        <!-- Pagination controls -->
                        <div class="pagination mt-3">
                            <% if (currentPage> 1) { %>
                                <a href="/category?page=<%= currentPage - 1 %>"
                                    class="btn btn-secondary btn-sm">Previous</a>
                                <% } %>

                                    <% for (let i=1; i <=totalPages; i++) { %>
                                        <a href="/category?page=<%= i %>"
                                            class="btn <%= currentPage === i ? 'btn-primary' : 'btn-secondary' %> btn-sm">
                                            <%= i %>
                                        </a>
                                        <% } %>

                                            <% if (currentPage < totalPages) { %>
                                                <a href="/category?page=<%= currentPage + 1 %>"
                                                    class="btn btn-secondary btn-sm">Next</a>
                                                <% } %>
                        </div>
            </div>
        </div>
    </main>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const ctx1 = document.getElementById("salesChart").getContext("2d");
            new Chart(ctx1, {
                type: "line",
                data: {
                    labels: ["Jan", "Feb", "Mar", "Apr", "May", "Jun"],
                    datasets: [{
                        label: "Sales",
                        data: [10, 20, 15, 30, 25, 40],
                        borderColor: "#007bff",
                        fill: false
                    }]
                }
            });

            const ctx2 = document.getElementById("usersChart").getContext("2d");
            new Chart(ctx2, {
                type: "bar",
                data: {
                    labels: ["Jan", "Feb", "Mar", "Apr", "May", "Jun"],
                    datasets: [{
                        label: "New Users",
                        data: [5, 15, 10, 25, 20, 35],
                        backgroundColor: "#28a745"
                    }]
                }
            });
        });
    </script>
</body>

</html>